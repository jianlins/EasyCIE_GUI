                    <execution>
                        <id>compile-jfx</id>
                        <phase>compile</phase>
                        <configuration>
                            <target>
                                <exec executable="bash">
                                    <arg value="script/compile_jfx.sh"/>
                                </exec>
                            </target>
                        </configuration>
                        <goals>
                            <goal>run</goal>
                        </goals>
                    </execution>
                    <execution>
                        <id>reset_permission</id>
                        <phase>package</phase>
                        <configuration>
                            <target>
                                <mkdir dir="${project.build.directory}/deploy/data"/>
                                <copy todir="${project.build.directory}/deploy/lib">
                                    <fileset dir="${project.basedir}/lib"/>
                                </copy>
                                <copy todir="${project.build.directory}/deploy/licenses">
                                    <fileset dir="${project.basedir}/licenses"/>
                                </copy>
                                <copy file="${project.build.directory}/jfx/app/easycie-gui-${version}-jfx.jar" tofile="${project.build.directory}/deploy/easycie-gui.jar"/>

                                <chmod file="${project.build.directory}/deploy/run_gui" perm="755"/>
                                <chmod file="${project.build.directory}/deploy/run_gui.bat" perm="755"/>
                            </target>
                        </configuration>
                        <goals>
                            <goal>run</goal>
                        </goals>
                    </execution>
                </executions>
            </plugin>
            <plugin>
                <artifactId>maven-resources-plugin</artifactId>
                <version>3.0.1</version>
                <configuration>
                    <encoding>UTF-8</encoding>
                </configuration>
                <executions>
                    <execution>
                        <id>copy-jars</id>
                        <phase>package</phase>
                        <goals>
                            <goal>copy-resources</goal>
                        </goals>
                        <configuration>
                            <outputDirectory>${project.build.directory}/deploy/lib</outputDirectory>
                            <resources>
                                <resource>
                                    <directory>${project.build.directory}/jfx/app/lib</directory>
                                    <filtering>false</filtering>
                                </resource>
                            </resources>
                        </configuration>
                    </execution>
                    <execution>
                        <id>copy-script</id>
                        <phase>package</phase>
                        <goals>
                            <goal>copy-resources</goal>
                        </goals>
                        <configuration>
                            <outputDirectory>${project.build.directory}/deploy</outputDirectory>
                            <resources>
                                <resource>
                                    <directory>script</directory>
                                    <filtering>true</filtering>
                                    <includes>
                                        <include>run_gui</include>
                                        <include>run_gui.bat</include>
                                    </includes>
                                </resource>
                            </resources>
                            <nonFilteredFileExtensions>
                                <nonFilteredFileExtension>docx</nonFilteredFileExtension>
                            </nonFilteredFileExtensions>
                        </configuration>
                    </execution>
                    <execution>
                        <id>copy-desc</id>
                        <phase>package</phase>
                        <goals>
                            <goal>copy-resources</goal>
                        </goals>
                        <configuration>
                            <outputDirectory>${project.build.directory}/deploy/desc</outputDirectory>
                            <resources>
                                <resource>
                                    <directory>desc</directory>
                                    <excludes>
                                        <exclude>**/customized*.xml</exclude>
                                        <exclude>**/pipeline_*.xml</exclude>
                                        <exclude>**/ae/*</exclude>
                                        <exclude>**/type/demo_*</exclude>
                                        <exclude>**/type/import_*</exclude>
                                        <exclude>**/type/gold*</exclude>
                                        <exclude>**/type/*_SQLTextReader.xml</exclude>
                                        <exclude>**/type/*_cpe__Type.xml</exclude>
                                    </excludes>
                                </resource>
                            </resources>
                        </configuration>
                    </execution>
