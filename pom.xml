            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-antrun-plugin</artifactId>
                <version>1.6</version>
                <executions>
                    <execution>
                        <id>default-feature-install</id>
                        <phase>validate</phase>
                        <configuration>
                            <target>
                                <replaceregexp file="src/main/java/edu/utah/bmi/simple/gui/controller/RootLayoutController.java"
                                               match="\(version [^\)]+\)" replace="\(version ${version}\)" byline="true"/>
                            </target>
                        </configuration>
                        <goals>
                            <goal>run</goal>
                        </goals>
                    </execution>
<!--                    <execution>-->
<!--                        <id>update-version-in-gui</id>-->
